<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/igrey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reason1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:padding="10dp"
        android:text="Enter product quantity : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/editTextDialogUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reason1"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"

        android:hint="Quantity"

        android:inputType="number"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/white">

        <requestFocus />

    </EditText>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextDialogUserInput"
        android:layout_alignRight="@+id/editTextDialogUserInput"
        android:layout_below="@+id/editTextDialogUserInput"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/btn"
        android:text="Sumbit"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSubmit"

        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/btnSubmit"
        android:layout_toStartOf="@+id/btnSubmit"
        android:background="@color/red"
        android:text="Cancel"
        android:textColor="@android:color/white" />

</RelativeLayout>